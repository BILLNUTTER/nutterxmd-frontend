{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "node", // ✅ FIXED
    "esModuleInterop": true, // ✅ ADDED
    "resolveJsonModule": true, // ✅ ADDED
    "allowSyntheticDefaultImports": true, // ✅ Optional but useful
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src",
    "backend"
  ] // ✅ Make sure your backend folder is included
}